{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/((?!api).*)", "destination": "/" }
  ],
  "functions": {
    "api/stripe/webhook.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "api": {
    "bodyParser": {
      "sizeLimit": "1mb"
    }
  }
}
