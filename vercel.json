{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api" },
    { "source": "/((?!api).*)", "destination": "/" }
  ],
  "functions": {
    "api/index.js": {
      "runtime": "@vercel/node@3",
      "maxDuration": 30
    }
  }
}
